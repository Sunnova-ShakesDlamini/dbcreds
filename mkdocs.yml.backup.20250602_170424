# Plugins
plugins:
  - search:
      separator: '[\s\-\_\.]+'
  - mkdocstrings:
      handlers:
        python:
          options:
            show_source: true
            show_root_heading: true
            show_category_heading: true
            docstring_style: numpy
            merge_init_into_class: true
            show_if_no_docstring: false
            show_signature_annotations: true
            show_bases: true
            heading_level: 2

# Extensions
markdown_extensions:
